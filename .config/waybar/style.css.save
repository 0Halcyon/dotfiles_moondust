@import "mocha.css";
@define-color border-module #fffff0;

/* --- GENERAL --- */
* {
  font-family: JetBrainsMono Nerd Font;
  font-size: 13px;
  min-height: 0;
}

#waybar {
  background: transparent;
  color: @text;
  padding: 50rem;
}

#window,
#clock,
#network,
#idle_inhibitor,
#pulseaudio,
#cpu,
#memory,
#temperature,
#backlight,
#battery,
#custom-updates,
#custom-dunst,
#tray,
#custom-lock,
#custom-power {
  color: #ffffff;
  background: #000000;
  border-radius: 13px;
  background-color: #000000;
  border: 1.5px solid @border-module;
  padding: 0.5rem 0.75rem;
  margin: 5px 0;
}

/* --- LEFT MODULES --- */

#workspaces {
  border-radius: 1rem 0px 0px 1rem;

  margin: 5px 0 5px 5px;
  padding-left: 0.3rem;
  background-color: transparent;
  
  /* background-color: @surface0; */
}

#workspaces button {
  background-color: black;
  border-radius: 2rem;
  padding: 0.25rem;
  margin: 0.3rem 0;
  color: white;

  /* color: @lavender; */

  transition: color 0.5s, background-color 0.5s;
