    },

    "bluetooth": {
        "format": "on",
        "format-off": "off",
        "tooltip-format": "{status}",
        "layer": "top",
        "position": "top",
        "modules-right": ["custom/bluetooth"],
        "custom/bluetooth": {
          "exec": "bluetoothctl show | grep 'Powered: yes' && echo 'Ôäî' || echo 'Ôäî'",
          "interval": 10,
          "tooltip": true,
        },
        "on-click": "blueman-manager"
      },
            
      

    "cpu": {
        "interval": 10,
        "format": "{usage}% Ôíº",
        "on-click": "kitty btop"
    },

    "memory": {
        "interval": 10,
        "format": "{}% Óâ¶",
        "on-click": "kitty btop"
    },

    "temperature": {
        "interval": 30,
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C Ôãâ",
        "on-click": "kitty btop"
    },

    "backlight": {
